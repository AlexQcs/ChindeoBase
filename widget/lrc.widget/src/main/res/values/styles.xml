<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="wh_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wh_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wh_wm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wh_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <declare-styleable name="CdoTextView">
        <!--       圆角的位置  (不指定的话则四个角都有效果)-->
        <attr name="corners">
            <flag name="top_left" value="0x30" />
            <flag name="top_right" value="0x50" />
            <flag name="bottom_left" value="0x03" />
            <flag name="bottom_right" value="0x05" />
        </attr>
        <!--       形状  -->
        <attr name="shape">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
        </attr>
        <!--        圆角半径-->
        <attr name="radius" format="dimension" />
        <!--        涟漪颜色-->
        <attr name="ripple_color" format="color" />
        <!--        边框宽度-->
        <attr name="stroke_width" format="dimension" />
        <!--        边框颜色-->
        <attr name="stroke_color" format="color" />
        <!--        实心颜色-->
        <attr name="solid_color" format="color" />
        <!--        按钮enable=false时候 实心的颜色-->
        <attr name="unable_solid_color" format="color" />
        <!--        按钮enable=false时候 边框的颜色-->
        <attr name="unable_stroke_color" format="color" />
        <!--        按钮enable=false时候 字体的颜色 -->
        <attr name="unable_text_color" format="color" />
        <!--        按钮渐变色 开始颜色 -->
        <attr name="start_color" format="color" />
        <!--        按钮渐变色 过渡颜色 -->
        <attr name="center_color" format="color" />
        <!--        按钮渐变色 结束颜色 -->
        <attr name="end_color" format="color" />
        <!--        按钮渐变方向 -->
        <attr name="gradient_orientation">
            <enum name="left_right" value="0" />
            <enum name="top_bottom" value="270" />
        </attr>

    </declare-styleable>

</resources>
